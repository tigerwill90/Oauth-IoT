{
  "name": "Oauth2.0 server",
  "description": "Slim 3 skeleton - authentication - authorization",
  "type": "project",
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
      "slim",
      "api",
      "rest",
      "php",
      "skeleton",
      "authentication",
      "authorization"
  ],
  "minimum-stability": "stable",
  "homepage": "https://github.com/tigerwill90/Oauth-IoT",
  "authors": [
      {
          "name": "Sylvain Muller",
          "email": "sylvain.muller90@gmail.com",
          "homepage": "https://www.sylvainmuller.ch",
          "role": "Developer"
      }
  ],
  "require": {
    "ext-json" : "*",
    "ext-curl" : "*",
    "ext-gmp" : "*",
    "ext-pdo" : "*",
    "php" : "^7.2",
    "slim/slim" : "^3.10",
    "vlucas/phpdotenv": "^2.5",
    "phpseclib/phpseclib": "^2.0",
    "web-token/jwt-core": "^1.1",
    "web-token/jwt-checker": "^1.1",
    "web-token/jwt-signature": "^1.1",
    "web-token/jwt-encryption": "^1.1",
    "monolog/monolog": "^1.23",
    "respect/validation": "^1.1",
    "ircmaxell/random-lib": "^1.2"
  },
  "require-dev" : {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^7.3.0",
    "phpstan/phpstan": "^0.10.3",
    "squizlabs/php_codesniffer" : "^3.0"
  },
  "autoload": {
      "psr-4": {
        "Oauth\\": "app/"
      }
  },
  "autoload-dev": {
    "psr-4": {
      "Oauth\\Tests\\": "tests/"
    }
  }
}
